    <script type="text/javascript">
	jQuery(function() {
		jQuery('#btn_link_preventivo').localScroll({ hash:false, duration:200, offset:60 });
	});
	jQuery(window).bind('resize',function(){
		jQuery('#btn_link_preventivo').localScroll({ hash:false, duration:200, offset:60 });
	});
	
	var altezza_descrizione = 0, stato_descrizione = 0;
	jQuery(function() {	
		jQuery('#cnt_descrizione').css('height', 'auto');
		altezza_descrizione = jQuery('#cnt_descrizione').height();
		if(stato_descrizione==0) {
			jQuery('#cnt_descrizione').css('height', window.innerWidth < 768 ? 100 : 'auto');
		}
	});
	jQuery(window).resize(function(){
		jQuery('#cnt_descrizione').css('height', 'auto');
		altezza_descrizione = jQuery('#cnt_descrizione').height();
		if(stato_descrizione==0) {
			jQuery('#cnt_descrizione').css('height', window.innerWidth < 768 ? 100 : 'auto');
		}
	});	

	function descrizione_toggle() {
		if(stato_descrizione==0) {
			jQuery('#cnt_descrizione').animate({ height: altezza_descrizione }, 200);
			jQuery('#cnt_descrizione_toggle').removeClass('_open').addClass('_close');
			stato_descrizione=1;
		} else {
			jQuery('#cnt_descrizione').animate({ height: 100 }, 200);
			jQuery('#cnt_descrizione_toggle').removeClass('_close').addClass('_open');
			stato_descrizione=0;
		}
	}
	
	function setCookie(cname, cvalue, exdays) {
		var d = new Date();
		d.setTime(d.getTime() + (exdays*24*60*60*1000));
		var expires = "expires="+d.toUTCString();
		document.cookie = cname + "=" + cvalue + "; " + expires + "; path=/";
	} 

	var hotels_preferiti = [];
	var hotels_like = [];
	var like_modificato = false;
	
	function addFavorite(id) {
		if(hotels_preferiti.indexOf(id)==-1) {
			var preferiti = parseInt(jQuery('#tot_preferiti').html())+1;
			hotels_preferiti.push(id);
			setCookie('hotels_preferiti', hotels_preferiti.join(), 1000);
			if(hotels_like.indexOf(id)==-1) {
				var likes = parseInt(jQuery('#likes_hotel').html())+1;
				jQuery.get('https://www.italyfamilyhotels.it/wp-content/themes/ifh/inc/inc_like.ajax.php','id='+id);
				hotels_like.push(id);
				setCookie('hotels_like', hotels_like.join(), 1000);
				like_modificato = true;
			}
			pos = jQuery('#link_preferiti').offset();
			jQuery('#cuore_preferito').css('top', pos.top-jQuery(window).scrollTop()).css('left', pos.left-jQuery(window).scrollLeft()+(jQuery('#link_preferiti').width()/2)-15).fadeIn(100,function() { 
				jQuery('#cuore_preferito').animate({top:-30}, 500, function(){ 
					if(like_modificato) jQuery('#likes_hotel').html(likes);
					jQuery('#tot_preferiti').html(preferiti);
					jQuery('#link_preferiti').hide();
					jQuery('#hotel_preferito').show();
				}); 
			});
		}
	}
	
	function removeFavorite(id) {
		var indice = hotels_preferiti.indexOf(id);
		if(indice!=-1) {
			hotels_preferiti.splice(indice,1);
			setCookie('hotels_preferiti', hotels_preferiti.join(), 1000);
			location.reload();
		}
	}
		
	// lettura dati tempo di risposta
	jQuery(function() {				
		jQuery.post('https://www.italyfamilyhotels.it/get_tempo_risposta.php',
   			{ id_hotel: '67' },
    		function(data, status) {
        		if(status=='success') {
					var ore_risposta = parseInt(data);
					if(ore_risposta!=0) {
						var time = new Date();
						var current_day = time.getDate();
						time.setHours(time.getHours() + ore_risposta);
						var new_hour = "0" + time.getHours();
						jQuery('#banner_preventivo .ore').html(new_hour.substr(new_hour.length-2));
						var coeff = 1000 * 60 * 5; // 5 minuti
						var rounded = new Date(Math.round(time / coeff) * coeff);
						var new_minute = "0" + rounded.getMinutes();
						jQuery('#banner_preventivo .minuti').html(new_minute.substr(new_minute.length-2));
						jQuery('#banner_preventivo .no_ore').hide();
						jQuery('#banner_preventivo .si_ore').show();
					}
				}
			}
		);
	});
	</script>
    
