    <script type="text/javascript">
	function switchTabs(tab, lnk) {
		switch(tab) {
		case 'mare':
			jQuery('#box_destinazione_montagna').hide();
			jQuery('#box_destinazione_laghi').hide();
			jQuery('#box_destinazione_terme').hide();
			jQuery('#box_destinazione_mare').fadeIn();
			break;
		case 'montagna':
			jQuery('#box_destinazione_mare').hide();
			jQuery('#box_destinazione_laghi').hide();
			jQuery('#box_destinazione_terme').hide();
			jQuery('#box_destinazione_montagna').fadeIn();
			break;
		case 'laghi':
			jQuery('#box_destinazione_mare').hide();
			jQuery('#box_destinazione_montagna').hide();
			jQuery('#box_destinazione_terme').hide();
			jQuery('#box_destinazione_laghi').fadeIn();
			break;
		case 'terme':
			jQuery('#box_destinazione_mare').hide();
			jQuery('#box_destinazione_montagna').hide();
			jQuery('#box_destinazione_laghi').hide();
			jQuery('#box_destinazione_terme').fadeIn();
			break;
		}
		jQuery('#box_destinazione_links a').removeClass('active');
		jQuery(lnk).addClass('active');
	}
	</script>
	
