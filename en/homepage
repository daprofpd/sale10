<script type="text/javascript">
function setCookie(cname, cvalue, exdays) {
    var d = new Date();
    d.setTime(d.getTime() + (exdays*24*60*60*1000));
    var expires = "expires="+d.toUTCString();
    document.cookie = cname + "=" + cvalue + "; " + expires + "; path=/";
} 

function submitSearch() {
	var cookie = { destinazione:'', qualita:'', prezzo:'' };
	if(jQuery('#filtro_destinazione').val()!='') cookie.destinazione = jQuery('#filtro_destinazione').val();
	if(jQuery('#filtro_qualita').val()!='') cookie.qualita = jQuery('#filtro_qualita').val();
	if(jQuery('#filtro_prezzo').val()!='') cookie.prezzo = jQuery('#filtro_prezzo').val();
	setCookie('last_search', JSON.stringify(cookie), 1000);
	jQuery('#form_ricerca_header').submit();
}

jQuery("#ricerca_destinazione").click(function(event) {
	event.stopPropagation();
	event.preventDefault();
});
jQuery("#ricerca_qualita").click(function(event) {
	event.stopPropagation();
	event.preventDefault();
});
jQuery("#ricerca_prezzo").click(function(event) {
	event.stopPropagation();
	event.preventDefault();
});

jQuery("span.question").click(function(event) {
	document.location.href='https://www.italyfamilyhotels.it/en/quality-assurance';
});

function hideSubmenu() {
	// nasconde i sottomenu eventualmente aperti
	if(open_submenu_destinazione==true) {
		jQuery('#submenu_destinazione').fadeOut(100);
		jQuery('#ricerca_destinazione').removeClass('opened');
		open_submenu_destinazione = false;
	}
	if(open_submenu_qualita==true) {
		jQuery('#submenu_qualita').fadeOut(100);
		jQuery('#ricerca_qualita').removeClass('opened');
		open_submenu_qualita = false;
	}
	if(open_submenu_prezzo==true) {
		jQuery('#submenu_prezzo').fadeOut(100);
		jQuery('#ricerca_prezzo').removeClass('opened');
		open_submenu_prezzo = false;
	}
}

/** MENU RICERCA PER DESTINAZIONE **/

var open_submenu_destinazione = false;
function toggleSubmenuDestinazione(id) {
	// nasconde i sottomenu eventualmente aperti
	if(open_submenu_qualita==true) {
		jQuery('#submenu_qualita').fadeOut(100);
		jQuery('#ricerca_qualita').removeClass('opened');
		open_submenu_qualita = false;
	}
	if(open_submenu_prezzo==true) {
		jQuery('#submenu_prezzo').fadeOut(100);
		jQuery('#ricerca_prezzo').removeClass('opened');
		open_submenu_prezzo = false;
	}
	// mostra il sottomenu
	if(!jQuery('#submenu_destinazione').is(":visible")) {
		var position = jQuery('#ricerca_destinazione').position();
		jQuery('#submenu_destinazione').css('top',(Math.round(position.top)+jQuery('#ricerca_destinazione').outerHeight())+'px')
		.css('left',Math.round(position.left+jQuery('#ricerca_destinazione').outerWidth(true)-jQuery('#ricerca_destinazione').outerWidth())+'px')
		.width(jQuery('#ricerca_destinazione').outerWidth()).fadeIn(100).addClass('opened');
		open_submenu_destinazione = true;
	} else { 
		jQuery('#submenu_destinazione').fadeOut(100).removeClass('opened');
		open_submenu_destinazione = false;
	}
}

jQuery('#ricerca_destinazione').hover(
	function(){
		var position = jQuery('#ricerca_destinazione').position();
		jQuery('#tooltip_destinazione').css('top',position.top-jQuery('#tooltip_destinazione').height()-28)
		.css('left',position.left+jQuery('#ricerca_destinazione').outerWidth(true)-jQuery('#ricerca_destinazione').outerWidth()).fadeIn(100);
	},
	function(){ jQuery('#tooltip_destinazione').fadeOut(100); }
);

function changeDestinazione(el) {
	if(jQuery(el).hasClass('checked')) { jQuery(el).removeClass('checked'); } else { jQuery(el).addClass('checked'); }
	var scelte = new Array(); var voce = '';
	if(jQuery('#a_dest6ma').hasClass('checked')) { scelte.push('6|ma'); voce=jQuery('#a_dest6ma').html(); }if(jQuery('#a_dest13ma').hasClass('checked')) { scelte.push('13|ma'); voce=jQuery('#a_dest13ma').html(); }if(jQuery('#a_dest2ma').hasClass('checked')) { scelte.push('2|ma'); voce=jQuery('#a_dest2ma').html(); }if(jQuery('#a_dest18ma').hasClass('checked')) { scelte.push('18|ma'); voce=jQuery('#a_dest18ma').html(); }if(jQuery('#a_dest7ma').hasClass('checked')) { scelte.push('7|ma'); voce=jQuery('#a_dest7ma').html(); }if(jQuery('#a_dest5ma').hasClass('checked')) { scelte.push('5|ma'); voce=jQuery('#a_dest5ma').html(); }if(jQuery('#a_dest3ma').hasClass('checked')) { scelte.push('3|ma'); voce=jQuery('#a_dest3ma').html(); }if(jQuery('#a_dest11ma').hasClass('checked')) { scelte.push('11|ma'); voce=jQuery('#a_dest11ma').html(); }if(jQuery('#a_dest1ma').hasClass('checked')) { scelte.push('1|ma'); voce=jQuery('#a_dest1ma').html(); }if(jQuery('#a_dest4ma').hasClass('checked')) { scelte.push('4|ma'); voce=jQuery('#a_dest4ma').html(); }if(jQuery('#a_dest14ma').hasClass('checked')) { scelte.push('14|ma'); voce=jQuery('#a_dest14ma').html(); }if(jQuery('#a_dest16ma').hasClass('checked')) { scelte.push('16|ma'); voce=jQuery('#a_dest16ma').html(); }if(jQuery('#a_dest10mo').hasClass('checked')) { scelte.push('10|mo'); voce=jQuery('#a_dest10mo').html(); }if(jQuery('#a_dest12mo').hasClass('checked')) { scelte.push('12|mo'); voce=jQuery('#a_dest12mo').html(); }if(jQuery('#a_dest15mo').hasClass('checked')) { scelte.push('15|mo'); voce=jQuery('#a_dest15mo').html(); }	if(scelte.length==0) {
		jQuery('#ricerca_destinazione span.value').html("where do you want to go?");
		jQuery('#filtro_destinazione').val('');
	} else if(scelte.length==1) {
		jQuery('#ricerca_destinazione span.value').html(voce);
		jQuery('#filtro_destinazione').val(scelte[0]);
	} else {
		jQuery('#ricerca_destinazione span.value').html(scelte.length+" destinations");
		jQuery('#filtro_destinazione').val(scelte.join());
	}
	
}

/** MENU RICERCA PER QUALITA' **/

var open_submenu_qualita = false;
function toggleSubmenuQualita(id) {
	// nasconde i sottomenu eventualmente aperti
	if(open_submenu_destinazione==true) {
		jQuery('#submenu_destinazione').fadeOut(100);
		jQuery('#ricerca_destinazione').removeClass('opened');
		open_submenu_destinazione = false;
	}
	if(open_submenu_prezzo==true) {
		jQuery('#submenu_prezzo').fadeOut(100);
		jQuery('#ricerca_prezzo').removeClass('opened');
		open_submenu_prezzo = false;
	}
	// mostra il sottomenu
	if(!jQuery('#submenu_qualita').is(":visible")) {
		var position = jQuery('#ricerca_qualita').position();
		jQuery('#submenu_qualita').css('top',(Math.round(position.top)+jQuery('#ricerca_qualita').outerHeight())+'px')
		.css('left',(Math.round(position.left)+jQuery('#ricerca_qualita').outerWidth(true)-jQuery('#ricerca_qualita').outerWidth())+'px')
		.width(jQuery('#ricerca_qualita').outerWidth()).fadeIn(100).addClass('opened');
		open_submenu_qualita = true;
	} else { 
		jQuery('#submenu_qualita').fadeOut(100).removeClass('opened');
		open_submenu_qualita = false;
	}
}

jQuery('#ricerca_qualita').hover(
	function(){
		var position = jQuery('#ricerca_qualita').position();
		jQuery('#tooltip_qualita').css('top',position.top-jQuery('#tooltip_qualita').height()-28)
		.css('left',position.left+jQuery('#ricerca_qualita').outerWidth(true)-jQuery('#ricerca_qualita').outerWidth()).fadeIn(100);
	},
	function(){ jQuery('#tooltip_qualita').fadeOut(100); }
);

function changeQualita(el) {
	if(jQuery(el).hasClass('checked')) { jQuery(el).removeClass('checked'); } else { jQuery(el).addClass('checked'); }
	var scelte = new Array(); var voce = '';
	if(jQuery('#a_qualita3').hasClass('checked')) { scelte.push("3"); voce=jQuery('#a_qualita3').html(); }
	if(jQuery('#a_qualita4').hasClass('checked')) { scelte.push("4"); voce=jQuery('#a_qualita4').html(); }
	if(jQuery('#a_qualita5').hasClass('checked')) { scelte.push("5"); voce=jQuery('#a_qualita5').html(); }
	if(jQuery('#a_qualita5p').hasClass('checked')) { scelte.push("5p"); voce=jQuery('#a_qualita5p').html(); }
	if(scelte.length==0) {
		jQuery('#ricerca_qualita span.value').html("quality");
		jQuery('#filtro_qualita').val('');
	} else if(scelte.length==1) {
		switch(scelte[0]) {
		case "3": jQuery('#ricerca_qualita span.value').html("<span class=\"_3bino\"></span>"); break;
		case "4": jQuery('#ricerca_qualita span.value').html("<span class=\"_4bino\"></span>"); break;
		case "5": jQuery('#ricerca_qualita span.value').html("<span class=\"_5bino\"></span>"); break;
		case "5p": jQuery('#ricerca_qualita span.value').html("<span class=\"_5binoplus\"></span>"); break;
		}
		jQuery('#filtro_qualita').val(scelte[0]);
	} else {
		jQuery('#ricerca_qualita span.value').html(scelte.length+" selections");
		jQuery('#filtro_qualita').val(scelte.join());
	}
}

